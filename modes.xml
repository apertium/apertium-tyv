<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <mode name="tyv-twol" install="yes">
    <pipeline>
      <program name="hfst-strings2fst -S"/>
      <program name="hfst-compose-intersect">
        <file name=".deps/tyv.twol.hfst"/>
      </program>
      <program name="hfst-fst2strings"/>
    </pipeline>
  </mode>

  <mode name="tyv-morph" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="tyv.automorf.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="tyv-lexc" install="yes">
    <pipeline>
      <program name="hfst-lookup">
        <file name=".deps/tyv.LR.lexc.hfst"/>
      </program>
    </pipeline>
  </mode>

  <mode name="tyv-gener" install="yes">
    <pipeline>
      <program name="lt-proc -g">
        <file name="tyv.autogen.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="tyv-tagger" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="tyv.automorf.bin"/>
      </program>
      <program name="cg-proc -w">
        <file name="tyv.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="tyv-debug">
    <pipeline>
      <program name="lt-proc -w">
        <file name="tyv.automorf.bin"/>
      </program>
      <program name="cg-conv -a -l"/>
      <program name="vislcg3 --trace --grammar">
        <file name="tyv.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="tyv-disam" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="tyv.automorf.bin"/>
      </program>
      <program name="cg-conv -a -l"/>
      <program name="vislcg3 --grammar">
        <file name="tyv.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="tyv-spell" install="yes">
    <pipeline>
      <program name="hfst-ospell -S -n 10">
        <file name="tyv.zhfst"/>
      </program>
    </pipeline>
  </mode>

	<mode name="tyv-tokenise" install="yes">
		<pipeline>
			<program name="hfst-proc">
				<file name=".deps/acceptor.default.hfst"/>
			</program>
		</pipeline>
	</mode>


</modes>

