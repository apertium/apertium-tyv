DELIMITERS = "<.>" "<!>" "<?>" "<...>" "<¶>" ;
SOFT-DELIMITERS = "<,>" ;

SUBREADINGS = LTR ; # Alternate, left-to-right (main reading on the left)

SETS

LIST BOS = (>>>) ;
LIST EOS = (<<<) ;

LIST Gpr/Aor = gpr_aor ; 
LIST Gpr/Past = gpr_past ; 

LIST Aor = aor ; 

SET Gpr = Gpr/Aor OR Gpr/Past ; 

SECTION

REMOVE Gpr IF (1 EOS) ; 
